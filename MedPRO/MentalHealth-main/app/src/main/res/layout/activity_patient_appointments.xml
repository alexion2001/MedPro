<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".AppointementActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Appointment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/editTextPatientId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Patient Email"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#333"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextPatientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#333"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@+id/editTextPatientId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextDoctorId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Doctor Email"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@+id/editTextPatientName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextDoctorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Doctor Name"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@+id/editTextDoctorId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date and Time"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#333"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/editTextDoctorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextAppointmentType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Appointment Type"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Appointment"
        android:background="@drawable/rounded_button_gradient"
        android:textColor="@color/button_selector"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextAppointmentType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
