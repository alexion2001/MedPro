<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#BEC5EF">

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/roboto"
            android:text="Nume Pacient"
            android:textAllCaps="false"
            android:textColor="#071FB6"
            android:textColorHighlight="#1E88E5"
            android:textColorLink="#5E35B1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointement_type"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/back2"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="Programare"
            android:textColor="#fff"
            android:textColorHighlight="#8E24AA"
            android:textColorLink="#039BE5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/patient_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="113dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/_0652316456"
            android:textColor="#B9B9B9"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/patient_image"
            android:layout_width="69dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginBottom="26dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/userprofile" />

        <TextView
            android:id="@+id/appointement_date"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="82dp"
            android:fontFamily="@font/roboto"
            android:text="12/06/2020 at 9pm"
            android:textColor="#091E9F"
            android:textColorHighlight="#4DB9ED"
            android:textColorLink="#8E24AA"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>